<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_view_search"
        android:elevation="5dp"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/mouse"
        android:layout_marginBottom="-10dp"
        app:layout_constraintBottom_toTopOf="@id/home_main_card"
        app:layout_constraintEnd_toEndOf="@id/home_main_card"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/home_main_card"
        android:layout_width="340dp"
        android:layout_height="150dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/search_view"
        android:layout_marginTop="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/main_card"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/small_pet_card"
        android:layout_width="160dp"
        android:layout_height="250dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/home_main_card"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/home_main_card">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/small_pet"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/big_pet_card"
        android:layout_width="160dp"
        android:layout_height="250dp"
        app:cardBackgroundColor="@color/card_bg1"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/home_main_card"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@id/home_main_card">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/big_pet"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>