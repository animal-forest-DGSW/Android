<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.SearchView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:background="@color/black"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/home_main_card"
        android:layout_width="340dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="@color/main"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/small_pet_card"
        android:layout_width="160dp"
        android:layout_height="250dp"
        app:cardBackgroundColor="@color/main"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/home_main_card"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/home_main_card">

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/big_pet_card"
        android:layout_width="160dp"
        android:layout_height="250dp"
        app:cardBackgroundColor="@color/main"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/home_main_card"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/home_main_card"

        >

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>